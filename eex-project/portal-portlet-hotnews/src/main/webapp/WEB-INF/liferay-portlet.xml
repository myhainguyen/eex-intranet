<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.1.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_1_0.dtd">

<liferay-portlet-app>
    <portlet>
        <portlet-name>portal-portlet-hotnews</portlet-name>
		<instanceable>true</instanceable>       
        <ajaxable>false</ajaxable>
        <header-portlet-css>/css/hotnews.css</header-portlet-css>
        <add-default-resource>true</add-default-resource>
    </portlet>
     <portlet>
        <portlet-name>portal-portlet-hotnews-backend</portlet-name>
        <control-panel-entry-category>content</control-panel-entry-category>
        <control-panel-entry-weight>1.0</control-panel-entry-weight>
		<instanceable>false</instanceable>       
        <ajaxable>false</ajaxable>
        <header-portlet-css>/css/hotnews.css</header-portlet-css>
        <add-default-resource>true</add-default-resource>
    </portlet>
</liferay-portlet-app>
